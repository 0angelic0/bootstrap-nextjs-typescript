{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": ["es7", "es6", "dom"],
      "jsx": "react",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}